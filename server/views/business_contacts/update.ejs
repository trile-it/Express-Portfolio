<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--Content for the Update Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form group mb-1">
                    <label for="contactNameTextField">Contact Name</label>
                    <input type="text" class="form control"
                           id="contactNameTextField"
                           placeholder="Enter Contact Name"
                           name="contactName"
                           value="<%= businessContact.contactName %>"
                           required>
                </div>

                <div class="form group mb-1">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="text" class="form control"
                           id="contactNumberTextField"
                           placeholder="Enter Contact Number"
                           name="contactNumber"
                           value="<%= businessContact.contactNumber %>"
                           required>
                </div>

                <div class="form group mb-3">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form control"
                           id="emailTextField"
                           placeholder="Enter Email"
                           name="email"
                           value="<%= businessContact.email %>"
                           required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/business-contacts/delete/<%= businessContact._id %>"
                   class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
                <a href="/business-contacts" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>
